<%= form_with(model: record) do |form| %>
  <% if record.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(record.errors.count, "error") %> prohibited this record from being saved:</h2>
      <ul>
        <% record.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :title, "Titulo", style: "display: block" %>
    <%= form.text_field :title %>
  </div>
    <div class="form-group">
    <%= form.label :amount, "Monto", style: "display: block" %>
    <%= form.number_field :amount %>
  </div>
  <div class="form-group">
    <%= form.label :category_id, "Tipo", style: "display: block" %>
    <%= form.collection_select(:category_id, Category.where(is_income: type), :id, :title, { include_blank: 'Seleccione tipo de ' + (type == "1" ? 'Ingreso' : 'Egreso') }) %>
  </div>
</div>
<div class="form-group">
  <%= form.submit "Crear ", class:"btn btn-primary" %>
</div>
<% end %>